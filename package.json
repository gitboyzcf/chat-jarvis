    "@commitlint/config-conventional": "^17.6.3",
    "@rushstack/eslint-patch": "^1.2.0",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vitejs/plugin-vue-jsx": "^3.0.1",
    "@vue/eslint-config-prettier": "^7.1.0",
    "cz-customizable": "^7.0.0",
    "eslint": "^8.39.0",
    "eslint-plugin-vue": "^9.11.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "pre-commit": "^1.2.2",
    "prettier": "^2.8.8",
    "sass": "^1.62.1",
    "vite": "^4.3.5"
  },
  "lint-staged": {
    "*.{vue,js,jsx,json}": [
